<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/global_app_lay"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">

    <ImageView
        android:id="@+id/icon_gn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/title_gn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon_gn"
        android:lines="1"
        android:maxLines="1"
        android:paddingTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/font" />

    <TextView
        android:id="@+id/timing_gn"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_gn"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/icon_gn"
        android:paddingBottom="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/font" />

    <TextView
        android:id="@+id/categ_gn"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_gn"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/timing_gn"
        android:paddingBottom="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/font" />

</RelativeLayout>